		"eslint-plugin-perfectionist": "^5.4.0",
		"eslint-plugin-svelte": "^3.14.0",
		"globals": "^17.2.0",
		"mdsvex": "^0.12.6",
		"playwright": "^1.58.0",
		"postgres": "^3.4.8",
		"prettier": "^3.8.1",
		"prettier-plugin-svelte": "^3.4.1",
		"prettier-plugin-tailwindcss": "^0.7.2",
		"svelte": "^5.49.0",
		"svelte-check": "^4.3.5",
		"tailwindcss": "^4.1.18",
